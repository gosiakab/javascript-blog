{
  "name": "javascript-blog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init-project": "npm install && npm run all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "test": "npm run test:html && npm-run-all test:*",
    "test:html": "html-validate *.html",
    "test:js": "eslint js/",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build": "npm install && npm run all build:* && npm run test",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "build-dev": "npm-run-all build-dev:sass build:autoprefixer",
    "watch": "npm-run-all build:* build-dev -p watch:* build-dev -p watch:*",
    "watch:browsersync": "browser-sync start --server --files \"css/*.css\" \"*.html\" \"js/*.js\"",
    "watch:sassprefixer": "onchange sass/*.scss -- npm run build-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gosiakab/javascript-blog.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gosiakab/javascript-blog/issues"
  },
  "homepage": "https://github.com/gosiakab/javascript-blog#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.7",
    "eslint": "^7.15.0",
    "html-validate": "^2.23.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "watch": "^1.0.2"
  },
  "dependencies": {}
}
